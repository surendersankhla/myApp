<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TheamColor">

    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:id="@+id/img_layout"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/drawer_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer_button"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/heading_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ActivityName"
        android:layout_toRightOf="@+id/img_layout"
        android:layout_toLeftOf="@+id/mice_layout"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingRight="30dp"/>

    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/search_layout"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_button"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:id="@+id/mice_layout"
        android:layout_toLeftOf="@+id/search_layout"
        >

        <ImageView
            android:id="@+id/mice_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mice_button"
            />
    </RelativeLayout>



</RelativeLayout>