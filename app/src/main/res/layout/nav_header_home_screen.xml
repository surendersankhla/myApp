<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainmenu"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/headerPart"
            android:gravity="bottom">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_user"
                app:border_color="#FF000000"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameLay"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UserName"

                    android:text="UserNamefdfdfffd"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UserNicName"

                    android:text=" &#64; name"
                    android:textSize="14sp"
                    android:textColor="@color/hintColor"
                    android:layout_below="@id/UserName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/accountLayout"
            android:layout_marginTop="5dp"
            android:layout_below="@id/headerPart">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:id="@+id/account_icon">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/draw1"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/drawerTextColor"
                android:layout_toRightOf="@+id/account_icon"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/notificationLayout"
            android:layout_marginTop="5dp"
            android:layout_below="@id/accountLayout">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:id="@+id/notification_icon">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/draw2"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textColor="@color/drawerTextColor"
                android:layout_toRightOf="@+id/notification_icon"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/privacyLayout"
            android:layout_marginTop="5dp"
            android:layout_below="@id/notificationLayout">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:id="@+id/privacy_icon">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/draw3"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:textColor="@color/drawerTextColor"
                android:layout_toRightOf="@+id/privacy_icon"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/coupanLayout"
            android:layout_marginTop="5dp"
            android:layout_below="@id/privacyLayout">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:id="@+id/coupan_icon">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/draw4"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Coupons"
                android:textColor="@color/drawerTextColor"
                android:layout_toRightOf="@+id/coupan_icon"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/transactionLayout"
            android:layout_marginTop="5dp"
            android:layout_below="@id/coupanLayout">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:id="@+id/transaction_icon">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/draw5"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Transaction"
                android:textColor="@color/drawerTextColor"
                android:layout_toRightOf="@+id/transaction_icon"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/findFriendLayout"
            android:layout_marginTop="5dp"
            android:layout_below="@id/transactionLayout">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:id="@+id/findFriend_icon">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/draw6"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find Friends"
                android:textColor="@color/drawerTextColor"
                android:layout_toRightOf="@+id/findFriend_icon"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/BottomButton"
        android:background="@color/seperator_color"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/textColor"
            android:layout_marginRight="1dp"
            android:background="@color/TheamColor"
            android:layout_weight="50"
            android:id="@+id/drawer_logout"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textColor="@color/textColor"
            android:layout_marginLeft="1dp"
            android:background="@color/TheamColor"
            android:layout_weight="50"
            android:id="@+id/drawer_support"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:layout_below="@+id/mainmenu"
        android:layout_above="@+id/BottomButton"
        android:weightSum="2"
        android:id="@+id/netWorkIcon">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:id="@+id/net_icon"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/draw7on"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:id="@+id/ads_icon"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/draw8on"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
